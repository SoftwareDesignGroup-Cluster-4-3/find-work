<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkerDashboardActivity">

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:rowCount="10"
            app:columnCount="1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:text="Availability Status"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAvailability"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">

                    <!-- txtEmail -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:gravity="fill"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:paddingLeft="0dp"
                            android:scaleType="centerCrop"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/userDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="end"
                            android:paddingRight="0dp"
                            android:scaleType="centerCrop"
                            android:text="email"
                            android:textSize="16dp"
                            android:textStyle="normal"
                            android:visibility="visible" />
                    </LinearLayout>

                    <!-- txtName -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="fill"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="top"
                                android:paddingLeft="0dp"
                                android:scaleType="centerCrop"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="end"
                                android:paddingRight="0dp"
                                android:scaleType="centerCrop"
                                android:text=""
                                android:textSize="16dp"
                                android:textStyle="normal"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edtName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:gravity="end"
                                android:hint="Enter name"
                                android:textSize="16dp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="fill"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="top"
                                android:paddingLeft="0dp"
                                android:scaleType="centerCrop"
                                android:text="Phone"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/txtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="end"
                                android:paddingRight="0dp"
                                android:scaleType="centerCrop"
                                android:text=""
                                android:textSize="16dp"
                                android:textStyle="normal"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:gravity="end"
                                android:hint="Enter Phone"
                                android:textSize="16dp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="fill"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="top"
                                android:paddingLeft="0dp"
                                android:scaleType="centerCrop"
                                android:text="Address"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/txtAddress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="end"
                                android:paddingRight="0dp"
                                android:scaleType="centerCrop"
                                android:text=""
                                android:textSize="16dp"
                                android:textStyle="normal"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edtAddress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:gravity="end"
                                android:hint="Enter Address"
                                android:textSize="16dp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- txtSkill -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <LinearLayout
                            android:id="@+id/programmeLinear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="fill"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="top"
                                android:paddingLeft="0dp"
                                android:scaleType="centerCrop"
                                android:text="Skill Type"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtSkillType"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="end"
                                android:paddingRight="0dp"
                                android:scaleType="centerCrop"
                                android:text=""
                                android:textSize="16dp"
                                android:textStyle="normal"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edtSkillType"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:gravity="end"
                                android:hint="Select your skill type"
                                android:textSize="16dp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearSkillList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:background="@color/Gray"
                            android:gravity="fill"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Gardening"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Coconut tree climbing"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Roof cleaning and fixing
"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Plumbing"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Well digging"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Little house repairs"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Pet Caring
"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Babysitting
"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill9"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Repairing roads
"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSkill10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                android:layout_margin="5dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/txtSkill10"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:text="Cutting trees"
                                    android:textSize="16dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/editDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="50dp"
                        android:backgroundTint="@color/purple_200"
                        android:text="Edit Details"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_row="2"
                        app:layout_column="0"
                        tools:layout_editor_absoluteX="30dp"
                        tools:layout_editor_absoluteY="683dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_row="2"
                app:layout_column="0"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="683dp" />

        </androidx.gridlayout.widget.GridLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>